%h2 Sign up to TripForge

#authentications
  %h3 Sign up using these services
  = render :partial => 'authentications/list'

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'devise_form'}) do |f|
  = devise_error_messages!
  %p.field
    = f.label :email
    = f.text_field :email
  - if @user.password_required?
    %p.field
      = f.label :password
      = f.password_field :password
    %p.field
      = f.label :password_confirmation
      = f.password_field :password_confirmation
  %p= f.submit "Sign up"

= render :partial => "devise/shared/links"
