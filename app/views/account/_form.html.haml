%h1= @page_name = 'Signup'

= semantic_form_for @user, :url => '' do |f|
  = f.error_messages :header_message => 'Please correct the errors below:', :message => nil
  %ul
    = f.input :login
    = f.input :email
    = f.input :password
    = f.input :password_confirmation

    = f.commit_button 'Sign up'   
