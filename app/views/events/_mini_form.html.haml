= semantic_form_for(event) do |f|
  %fieldset
    %ul
      = f.input :trip_id, :as => :hidden
      = f.input :name, :required => true, :label => false
      = f.input :description, :as => :text, :required => false, :label => false
      = f.input :started_at, :as => :string, :label => false, :input_html => {:class => 'datetime_picker', :id => "event-#{f.object.id}-started_at"}, :wrapper_html => {:class => "datetime_picker"}
      %li.datetime_picker.dates_separator &raquo;
      = f.input :ended_at, :as => :string, :label => false, :input_html => {:class => 'datetime_picker', :id => "event-#{f.object.id}-ended_at"}, :wrapper_html => {:class => "datetime_picker"}