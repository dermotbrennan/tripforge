!!!
%html
  %head
    %title TripForge
    = stylesheet_link_tag :all
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"
    = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true"
    = javascript_include_tag 'ba-debug', 'helpers', 'date', 'anytime', 'custom_overlay', 'transport_mode',
      'map_mode', 'map_container', 'event_info_container', 'map_navigation', 'trip', 'jquery-ui-1.8.7.custom.min',
      'jquery.scrollfollow', 'jquery.scrollTo', 'event_list', 'event_list_item', 'event', 'event_form', 'application', 'rails', 'photos'
    = csrf_meta_tag
  %body{:id => "body-#{controller_name}-#{action_name}", :class => "controller-#{controller_name}"}
    - if flash[:error].present?
      #flash{:class => 'error'}= flash[:error]
    #header-outer
      #header-wrapper
        #header
          = link_to 'TripForge', :root, :id => 'logo'
          #main-navbar
            %ul
              - unless current_user
                %li= link_to 'sign in', new_user_session_path
                %li= link_to 'create account', new_user_registration_path
              - else
                %li= link_to 'my trips', trips_path
                %li= link_to 'settings', edit_user_registration_path
                %li= link_to 'logout', destroy_user_session_path

    #wrapper
      #main-content
        #main-content-inner= yield
