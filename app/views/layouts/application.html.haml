!!!
%html
  %head
    %title TripMap.com
    = stylesheet_link_tag :all
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
    = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true"
    = javascript_include_tag 'application', 'rails'
    = csrf_meta_tag
  %body{:id => "body-#{controller_name}-#{action_name}", :class => "controller-#{controller_name}"}
    #header-outer
      #header-wrapper
        #header
          = link_to 'TripMap Home', :root, :id => 'logo'
          #main-navbar
            %ul
              - unless current_user
                %li= link_to 'login', login_path
                %li= link_to 'signup', signup_path
              - else
                %li= link_to 'my trips', trips_path
                %li= link_to 'settings', '#'
                %li= link_to 'logout', logout_path

    #wrapper
      #main-content
        #main-content-inner= yield
