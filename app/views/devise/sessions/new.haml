%h2 Sign in to TripForge

#authentications
  %h3 Sign in using these services
  = render_cell :providers, :list

= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'devise_form'}) do |f|
  = devise_error_messages!
  %p.field
    = f.label :email
    = f.text_field :email
  %p.field
    = f.label :password
    = f.password_field :password
  - if devise_mapping.rememberable?
    %p.field
      = f.check_box :remember_me
      = f.label :remember_me
  %p= f.submit "Sign in"

= render :partial => "devise/shared/links"
