%h2
  = link_to 'All Albums', "#all_albums_#{@provider.code}", :class => 'back_to_all_albums'
  &gt;
  = @album_title

%ul.photos
  - @photos.in_groups_of(per_row = 4, false) do |group|
    - group.each_with_index do |photo, i|
      - class_name = (i == 0 ? 'clear' : '')
      %li.photo{:class => class_name, :id => "photo_#{photo.elements['gphoto:id'].text}"}
        .provider_id.hide= @provider.id
        .album_id.hide= photo.elements['gphoto:albumid'].text
        .title.hide= photo.elements['title'].text
        .source_url.hide= photo.elements['content'].attribute('src').value
        .source_created_at.hide= Time.at(photo.elements['gphoto:timestamp'].text.to_i/1000)
        .image= image_tag photo.elements['media:group/media:thumbnail'].attribute('url').value
        %p= photo.elements['media:group/media:title'].text